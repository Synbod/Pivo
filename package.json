{
  "name": "@synbod/synbod-pivot-table",
  "version": "0.0.1",
  "description": "Pivot table made with web platform technologies",
  "author": "Chris Chou <chhschou@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "start": "webpack-dev-server -d",
    "build": "webpack"
  },
  "repository": "https://github.com/Synbod/synbod-pivot-table",
  "bugs": {
    "url": "https://github.com/Synbod/synbod-pivot-table/issues"
  },
  "homepage": "https://github.com/Synbod/synbod-pivot-table#readme",
  "keywords": [
    "pivottable",
    "std",
    "wasm",
    "webassembly",
    "rust",
    "javascript"
  ],
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "runner": "@jest-runner/electron",
    "testEnvironment": "@jest-runner/electron/environment",
    "testMatch": [
      "**/__tests__/**/*.(ts|js)?(x)",
      "**/?(*.)+(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": []
  },
  "editorconfig": {
    "root": true,
    "rules": {
      "*": {
        "indent_style": "space",
        "indent_size": "2",
        "end_of_line": "lf",
        "charset": "utf-8",
        "trim_trailing_whitespace": true,
        "insert_final_newline": true,
        "max_line_length": "120"
      },
      "*.{md,markdown}": {
        "trim_trailing_whitespace": false
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "devDependencies": {
    "@jest-runner/electron": "^0.1.0",
    "@wasm-tool/wasm-pack-plugin": "0.2.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-runtime": "^6.26.0",
    "electron": "^4.0.0",
    "enzyme": "^3.8.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.11.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.0-beta.6",
    "ts-loader": "^5.3.2",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "typescript-tslint-plugin": "^0.2.1",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  },
  "dependencies": {
    "lit-html": "^0.14.0"
  }
}
