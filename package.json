{
  "name": "@synbod/synbod-pivot-table",
  "version": "0.0.1",
  "description": "Pivot table made with web platform technologies",
  "author": "Chris Chou <chhschou@gmail.com>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "jest",
    "start": "webpack-dev-server -d",
    "build": "webpack",
    "fix:resolutions": "rimraf node_modules && npx npm-force-resolutions && npm install"
  },
  "repository": "https://github.com/Synbod/synbod-pivot-table",
  "bugs": {
    "url": "https://github.com/Synbod/synbod-pivot-table/issues"
  },
  "homepage": "https://github.com/Synbod/synbod-pivot-table#readme",
  "keywords": [
    "pivottable",
    "std",
    "wasm",
    "webassembly",
    "rust",
    "javascript"
  ],
  "jest": {
    "runner": "@jest-runner/electron",
    "testEnvironment": "@jest-runner/electron/environment",
    "testMatch": [
      "**/__tests__/**/*.(ts|js)?(x)",
      "**/?(*.)+(spec|test).(ts|js)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(lit-html|lit-element)/)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/js/tests/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/js/tests/__mocks__/styleMock.js"
    }
  },
  "editorconfig": {
    "root": true,
    "rules": {
      "*": {
        "indent_style": "space",
        "indent_size": "2",
        "end_of_line": "lf",
        "charset": "utf-8",
        "trim_trailing_whitespace": true,
        "insert_final_newline": true,
        "max_line_length": "120"
      },
      "*.{md,markdown}": {
        "trim_trailing_whitespace": false
      }
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "resolutions": {
    "@jest-runner/electron/electron": "4.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@jest-runner/electron": "^1.1.1",
    "@wasm-tool/wasm-pack-plugin": "1.3.1",
    "babel-jest": "^24.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "css-loader": "^2.1.0",
    "electron": "^4.0.6",
    "enzyme": "^3.9.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "to-string-loader": "^1.1.5",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0"
  },
  "dependencies": {
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "normalize.css": "^8.0.1"
  }
}
